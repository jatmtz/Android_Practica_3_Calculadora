<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/calculation"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginTop="5dp"
        android:textAlignment="textEnd"
        android:textSize="56dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/resultado"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginTop="5dp"
        android:textAlignment="textEnd"
        android:textSize="56dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calculation"/>
    <Button
        android:id="@+id/botonAC"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="BORRAR TODO"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resultado"
        android:layout_marginLeft="5dp"/>

    <!--
   <Button
        android:id="@+id/botonDel"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="BACKSPACE"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/botonAC"
        app:layout_constraintTop_toTopOf="@id/botonAC" />
-->

    <Button
        android:id="@+id/boton7"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:backgroundTint="#673AB7"
        android:textColor="#ffffff"
        android:text="7"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/boton4"
        app:layout_constraintEnd_toStartOf="@id/boton8"
        app:layout_constraintTop_toBottomOf="@id/botonAC"
        android:layout_marginLeft="5dp"
        />
    <Button
        android:id="@+id/boton8"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:backgroundTint="#673AB7"
        android:textColor="#ffffff"
        android:text="8"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/boton7"
        app:layout_constraintTop_toBottomOf="@id/botonAC"
        app:layout_constraintEnd_toStartOf="@id/boton9"
        app:layout_constraintBottom_toTopOf="@id/boton5"
        android:layout_marginLeft="5dp"
        />
    <Button
        android:id="@+id/boton9"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:backgroundTint="#673AB7"
        android:textColor="#ffffff"
        android:text="9"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/boton8"
        app:layout_constraintEnd_toStartOf="@id/botonDiv"
        app:layout_constraintTop_toBottomOf="@id/botonAC"
        android:layout_marginLeft="5dp"
        />
    <Button
        android:id="@+id/botonDiv"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:backgroundTint="#673AB7"
        android:textColor="#E6CE84"
        android:text="/"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@id/boton9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/botonAC"
        android:layout_marginLeft="5dp"
        />
    <Button
        android:id="@+id/boton4"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:backgroundTint="#673AB7"
        android:textColor="#ffffff"
        android:text="4"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@id/boton5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/boton7"

        android:layout_marginLeft="5dp"
        />
    <Button
        android:id="@+id/boton5"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#673AB7"
        android:textColor="#ffffff"
        android:text="5"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@id/boton4"
        app:layout_constraintTop_toBottomOf="@id/boton8"
        app:layout_constraintEnd_toStartOf="@id/boton6"
        android:layout_marginLeft="5dp"
        />
    <Button
        android:id="@+id/boton6"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#673AB7"
        android:textColor="#ffffff"
        android:text="6"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@id/boton5"
        app:layout_constraintEnd_toStartOf="@id/botonMulti"
        app:layout_constraintTop_toBottomOf="@id/boton9"
        android:layout_marginLeft="5dp"
        />
    <Button
        android:id="@+id/botonMulti"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:backgroundTint="#673AB7"
        android:textColor="#E6CE84"
        android:text="x"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@id/boton6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/botonDiv"
        android:layout_marginLeft="5dp"
        />
    <Button
        android:id="@+id/boton1"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:backgroundTint="#673AB7"
        android:textColor="#ffffff"
        android:text="1"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/boton2"
        app:layout_constraintTop_toBottomOf="@id/boton4"
        android:layout_marginLeft="5dp"
        />
    <Button
        android:id="@+id/boton2"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:backgroundTint="#673AB7"
        android:textColor="#ffffff"
        android:text="2"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/boton1"
        app:layout_constraintEnd_toStartOf="@id/boton3"
        app:layout_constraintTop_toBottomOf="@id/boton5"
        android:layout_marginLeft="5dp"
        />
    <Button
        android:id="@+id/boton3"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:backgroundTint="#673AB7"
        android:textColor="#ffffff"
        android:text="3"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/boton2"
        app:layout_constraintTop_toBottomOf="@id/boton6"
        app:layout_constraintEnd_toStartOf="@id/botonMenos"
        android:layout_marginLeft="5dp"
        />
    <Button
        android:id="@+id/botonMenos"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:backgroundTint="#673AB7"
        android:textColor="#E6CE84"
        android:text="-"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@id/boton3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/botonMulti"
        android:layout_marginLeft="5dp"
        />
    <Button
        android:id="@+id/botonMas"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:backgroundTint="#673AB7"
        android:textColor="#E6CE84"
        android:text="+"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/boton3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/botonMenos"
        android:layout_marginLeft="5dp"
        />
    <Button
        android:id="@+id/botonpunto"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:backgroundTint="#673AB7"
        android:textColor="#ffffff"
        android:text="."
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/botoncero"
        app:layout_constraintTop_toBottomOf="@id/boton1"
        android:layout_marginLeft="5dp"
        />
    <Button
        android:id="@+id/botoncero"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:backgroundTint="#673AB7"
        android:textColor="#ffffff"
        android:text="0"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/botonpunto"
        app:layout_constraintEnd_toStartOf="@id/botonigual"
        app:layout_constraintTop_toBottomOf="@id/boton2"
        android:layout_marginLeft="5dp"
        />
    <Button
        android:id="@+id/botonigual"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/black"
        android:textColor="#ffffff"
        android:text="="
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/botoncero"
        app:layout_constraintTop_toBottomOf="@id/boton3"
        app:layout_constraintEnd_toStartOf="@id/botonMas"
        android:layout_marginLeft="5dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>